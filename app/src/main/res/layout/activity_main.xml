<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.delli.myrealcalculator.MainActivity">

    <Button
        android:id="@+id/btn_num1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="1"
        android:onClick="ocl_num1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_num4" />

    <Button
        android:id="@+id/btn_num2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="2"
        android:onClick="ocl_num2"
        app:layout_constraintLeft_toRightOf="@+id/btn_num1"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_num5" />

    <Button
        android:id="@+id/btn_num3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="3"
        android:onClick="ocl_num3"
        app:layout_constraintLeft_toRightOf="@+id/btn_num2"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_num6" />

    <Button
        android:id="@+id/btn_num4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="4"
        android:onClick="ocl_num4"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_num7" />

    <Button
        android:id="@+id/btn_num5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="5"
        android:onClick="ocl_num5"
        app:layout_constraintLeft_toRightOf="@+id/btn_num4"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_num8" />

    <Button
        android:id="@+id/btn_num6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="6"
        android:onClick="ocl_num6"
        app:layout_constraintLeft_toRightOf="@+id/btn_num5"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_num9" />

    <Button
        android:id="@+id/btn_num7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="7"
        android:onClick="ocl_num7"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_num" />

    <Button
        android:id="@+id/btn_num8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="8"
        android:onClick="ocl_num8"
        app:layout_constraintLeft_toRightOf="@+id/btn_num7"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_num" />

    <Button
        android:id="@+id/btn_num9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="9"
        android:onClick="ocl_num9"
        app:layout_constraintLeft_toRightOf="@+id/btn_num8"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_num" />

    <Button
        android:id="@+id/btn_num0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="0"
        android:onClick="ocl_num0"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_num2"
        app:layout_constraintLeft_toRightOf="@+id/btn_re"
        android:layout_marginLeft="41dp" />

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="="
        android:onClick="ocl_equal"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_num3"
        app:layout_constraintLeft_toRightOf="@+id/btn_num0"
        android:layout_marginLeft="35dp" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="+"
        android:onClick="ocl_add"
        app:layout_constraintLeft_toRightOf="@+id/btn_num9"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_num"
        app:layout_constraintHorizontal_bias="0.75" />

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="-"
        android:onClick="ocl_sub"
        app:layout_constraintLeft_toRightOf="@+id/btn_num6"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_add"
        app:layout_constraintHorizontal_bias="0.818" />

    <Button
        android:id="@+id/btn_mul"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="*"
        android:onClick="ocl_mul"
        app:layout_constraintLeft_toRightOf="@+id/btn_num3"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_sub"
        app:layout_constraintHorizontal_bias="0.818" />

    <Button
        android:id="@+id/btn_div"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="/"
        android:onClick="ocl_div"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_mul"
        app:layout_constraintLeft_toRightOf="@+id/btn_equal"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.923" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="167dp"
        android:layout_height="33dp"
        android:text="0"
        android:textSize="25dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/btn_re"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="R"
        android:onClick="ocl_re"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_num1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
